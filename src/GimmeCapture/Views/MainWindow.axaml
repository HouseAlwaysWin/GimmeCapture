<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GimmeCapture.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GimmeCapture.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="GimmeCapture">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="10">
        <!-- Settings Tabs -->
        <TabControl Grid.Row="0">
            <!-- 一般 (General) -->
            <TabItem Header="一般">
                <StackPanel Spacing="10" Margin="10">
                    <CheckBox IsChecked="{Binding RunOnStartup}" Content="開機自動啟動 (尚未實作)"/>
                    <CheckBox IsChecked="{Binding AutoCheckUpdates}" Content="自動檢查更新"/>
                    
                    <TextBlock Text="語言:" Margin="0,10,0,5"/>
                    <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch">
                        <ComboBoxItem>繁體中文 (台灣)</ComboBoxItem>
                        <ComboBoxItem>English (US)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </TabItem>
            
            <!-- 擷圖 (Snip) -->
            <TabItem Header="擷圖">
                <StackPanel Spacing="10" Margin="10">
                    <TextBlock Text="邊框粗細:" />
                    <Slider Minimum="0" Maximum="10" Value="{Binding BorderThickness}" 
                            TickFrequency="1" IsSnapToTickEnabled="True"/>
                    
                    <TextBlock Text="遮罩透明度:" />
                    <Slider Minimum="0.1" Maximum="0.9" Value="{Binding MaskOpacity}" />
                    
                    <TextBlock Text="邊框顏色 (預設 Red):" />
                    <!-- Color Picker placeholder or just text -->
                    <Border Background="{DynamicResource AccentRedBrush}" Height="30" CornerRadius="4"/>
                </StackPanel>
            </TabItem>
            
            <!-- 輸出 (Output) -->
            <TabItem Header="輸出">
                <StackPanel Spacing="10" Margin="10">
                    <CheckBox IsChecked="{Binding AutoSave}" Content="自動儲存 (跳過對話框)"/>
                    <Button Content="選擇儲存路徑..." HorizontalAlignment="Left" Theme="{StaticResource MetalButton}"/>
                    <TextBlock Text="目前路徑: [我的圖片]" Foreground="Gray" FontSize="12"/>
                </StackPanel>
            </TabItem>
            
            <!-- 關於 (About) -->
            <TabItem Header="關於">
                <StackPanel Spacing="10" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="GimmeCapture!!" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource AccentRedBrush}"/>
                    <TextBlock Text="Version 0.1.0 (Phase 1)" />
                    <TextBlock Text="The Metal Image/Video Snip Tool" FontStyle="Italic" Foreground="{DynamicResource AccentGoldBrush}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Bottom Actions -->
        <Border Grid.Row="1" BorderBrush="#1E1E1E" BorderThickness="0,1,0,0" Padding="0,10,0,0">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <!-- Test Button / Main Action -->
                <Button Grid.Column="0" Content="啟動截圖 (Snip)" Command="{Binding StartCaptureCommand}" />
                
                <TextBlock Grid.Column="1" Text="{Binding StatusText}" VerticalAlignment="Center" Margin="10,0" Foreground="Gray"/>

                <Button Grid.Column="2" Content="確定" Margin="0,0,10,0" />
                <Button Grid.Column="3" Content="取消" />
            </Grid>
        </Border>
    </Grid>
</Window>
