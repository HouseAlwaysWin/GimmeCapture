<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GimmeCapture.ViewModels.Floating"
        xmlns:mainVm="using:GimmeCapture.ViewModels.Main"
        xmlns:services="using:GimmeCapture.Services.Core"
        xmlns:controls="using:GimmeCapture.Views.Controls"
        xmlns:models="using:GimmeCapture.Models"
        xmlns:media="using:Avalonia.Media"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        x:Class="GimmeCapture.Views.Floating.FloatingVideoWindow"
        x:DataType="vm:FloatingVideoViewModel"
        Title="Pinned Video"
        SystemDecorations="None"
        Topmost="True"
        Background="Transparent"
        FontFamily="{Binding CurrentFontFamily, Source={x:Static services:LocalizationService.Instance}}"
        ShowInTaskbar="False">
        
    <Window.Styles>
        <Style Selector="Grid.Handle">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Border.MainBorder">
            <Setter Property="BoxShadow" Value="{Binding BorderColor, Converter={StaticResource ColorToBoxShadowConverter}}"/>
            <Setter Property="BorderThickness" Value="{Binding BorderThickness, Converter={StaticResource ThicknessConverter}}"/>
        </Style>
        <Style Selector="Border.MainBorder.hidden-border">
            <Setter Property="BoxShadow" Value="0 0 0 0 Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Border.InnerBorder.hidden-border">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>
    
    <Grid Name="RootGrid" Background="Transparent" RowDefinitions="Auto, Auto, Auto">
        
        <!-- Row 0: Placeholder for Diagnostic/Overlay -->
        <Border Grid.Row="0" Height="0" IsVisible="False"/>

        <!-- Row 1: Main Video Area + Decorations + Drawing Layer -->
        <Border Grid.Row="1"
                Margin="{Binding WindowPadding}"
                Classes="MainBorder"
                Classes.hidden-border="{Binding HidePinBorder}"
                CornerRadius="0"
                Background="{DynamicResource GothicBlackBrush}">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%" Opacity="{Binding HidePinBorder, Converter={StaticResource BoolInvertConverter}}">
                    <GradientStop Offset="0" Color="{Binding BorderColor}"/>
                    <GradientStop Offset="0.5" Color="{Binding BorderColor}"/>
                    <GradientStop Offset="1" Color="{Binding BorderColor}"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border Classes="InnerBorder">
                <Grid>
                    <!-- Content Alignment Layer -->
                    <Grid Width="{Binding DisplayWidth}" Height="{Binding DisplayHeight}" ClipToBounds="True">
                        <!-- Video Base -->
                        <Image Source="{Binding VideoBitmap}" 
                               Stretch="Fill" 
                               Name="PinnedVideo"/>
                        
                        <!-- Annotation Layer -->
                        <ItemsControl ItemsSource="{Binding Annotations}" IsHitTestVisible="False">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding DisplayWidth}" Height="{Binding DisplayHeight}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.Styles>
                                <Style Selector="ItemsControl > ContentPresenter" x:DataType="models:Annotation">
                                    <Setter Property="Canvas.Left">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource AnnotationToLeftConverter}">
                                                <Binding Path="Type"/>
                                                <Binding Path="StartPoint"/>
                                                <Binding Path="EndPoint"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Canvas.Top">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource AnnotationToTopConverter}">
                                                <Binding Path="Type"/>
                                                <Binding Path="StartPoint"/>
                                                <Binding Path="EndPoint"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ItemsControl.Styles>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:Annotation">
                                    <controls:AnnotationControl Annotation="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Diagnostic Overlay -->
                        <Border Background="#A0000000" CornerRadius="4" Padding="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" IsHitTestVisible="False">
                            <StackPanel>
                                <TextBlock Text="{Binding Annotations.Count, StringFormat='Annotations: {0}'}" Foreground="Lime" FontSize="10"/>
                                <TextBlock Text="{Binding CurrentAnnotationTool, StringFormat='Tool: {0}'}" Foreground="Cyan" FontSize="10"/>
                                <TextBlock Text="{Binding DisplayWidth, StringFormat='VW: {0:F0}'}" Foreground="White" FontSize="10"/>
                                <TextBlock Text="{Binding DisplayHeight, StringFormat='VH: {0:F0}'}" Foreground="White" FontSize="10"/>
                            </StackPanel>
                        </Border>

                        <!-- Text Entry Overlay -->
                        <Panel IsVisible="{Binding IsEnteringText}" Background="#80000000">
                           <Border Background="#1E1E1E" 
                                   BorderBrush="{Binding SelectedColor, Converter={StaticResource ColorToBrushConverter}}" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   Width="400"
                                   BoxShadow="0 10 30 0 #A0000000">
                               <StackPanel Spacing="15">
                                   <TextBlock Text="Add Text" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                   
                                   <TextBox Name="TextInputOverlay" 
                                            Text="{Binding PendingText, Mode=TwoWay}" 
                                            FontSize="{Binding CurrentFontSize}"
                                            FontWeight="{Binding IsBold, Converter={StaticResource BoolToFontWeightConverter}}"
                                            FontStyle="{Binding IsItalic, Converter={StaticResource BoolToFontStyleConverter}}"
                                            Foreground="{Binding SelectedColor, Converter={StaticResource ColorToBrushConverter}}"
                                            AcceptsReturn="True" 
                                            Watermark="Type something..."
                                            MinHeight="80"
                                            Background="#2D2D2D"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Padding="10"/>

                                   <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,5,0,0">
                                       <StackPanel Orientation="Horizontal" Spacing="10">
                                            <ToggleButton IsChecked="{Binding IsBold}" Theme="{StaticResource SnipButton}">
                                                <TextBlock Text="B" FontWeight="Bold" Width="20" HorizontalAlignment="Center"/>
                                            </ToggleButton>
                                            <ToggleButton IsChecked="{Binding IsItalic}" Theme="{StaticResource SnipButton}">
                                                <TextBlock Text="I" FontStyle="Italic" Width="20" HorizontalAlignment="Center"/>
                                            </ToggleButton>
                                            <NumericUpDown Value="{Binding CurrentFontSize}" Minimum="8" Maximum="144" Width="70" ClipValueToMinMax="True"/>
                                       </StackPanel>
                                       
                                       <Button Grid.Column="1" Content="OK" Click="OnTextConfirmClick" Classes="accent" Margin="10,0,0,0" Width="60" IsDefault="True"/>
                                       <Button Grid.Column="2" Content="Cancel" Command="{Binding CancelTextEntryCommand}" Margin="10,0,0,0" Width="80"/>
                                   </Grid>
                               </StackPanel>
                           </Border>
                        </Panel>

                        <!-- Inner Border Line -->
                        <Border BorderBrush="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}" 
                                BorderThickness="1" Margin="-1" 
                                IsHitTestVisible="False"
                                IsVisible="{Binding HidePinBorder, Converter={StaticResource BoolInvertConverter}}"/>
                                
                        <!-- Resize Handles -->
                        <Grid Classes="Handle" Name="HandleTopLeft" Cursor="TopLeftCorner" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-15"/>
                        <Grid Classes="Handle" Name="HandleTopRight" Cursor="TopRightCorner" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-15"/>
                        <Grid Classes="Handle" Name="HandleBottomLeft" Cursor="BottomLeftCorner" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-15"/>
                        <Grid Classes="Handle" Name="HandleBottomRight" Cursor="BottomRightCorner" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-15"/>
                        <Grid Classes="Handle" Name="HandleTop" Cursor="TopSide" Height="15" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="15,0"/>
                        <Grid Classes="Handle" Name="HandleBottom" Cursor="BottomSide" Height="15" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="15,0"/>
                        <Grid Classes="Handle" Name="HandleLeft" Cursor="LeftSide" Width="15" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,15"/>
                        <Grid Classes="Handle" Name="HandleRight" Cursor="RightSide" Width="15" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,15"/>
                    </Grid>
                        
                    <!-- Accent Corners (Themed) -->
                    <Grid IsVisible="{Binding HidePinDecoration, Converter={StaticResource BoolInvertConverter}}" Margin="0" ClipToBounds="False" IsHitTestVisible="False">
                        <Grid ClipToBounds="False">
                            <Border BorderThickness="{Binding BorderThickness, Converter={StaticResource ThicknessConverter}}" ClipToBounds="False">
                                <Border BorderThickness="1" Margin="-1" ClipToBounds="False">
                                    <Grid Name="AccentCornersGrid" ClipToBounds="False">
                                        <!-- Left Inner Corners: Hearts -->
                                        <Rectangle Name="InnerCornerTopLeft" Width="{Binding SelectionIconSize}" Height="{Binding SelectionIconSize}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4"
                                                   Fill="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality">
                                            <Rectangle.OpacityMask>
                                                <ImageBrush Source="/Assets/heart.png" Stretch="Uniform"/>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                        <Rectangle Name="InnerCornerBottomLeft" Width="{Binding SelectionIconSize}" Height="{Binding SelectionIconSize}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="4"
                                                   Fill="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality">
                                            <Rectangle.OpacityMask>
                                                <ImageBrush Source="/Assets/heart.png" Stretch="Uniform"/>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>

                                        <!-- Right Inner Corners: Skulls -->
                                        <Rectangle Name="InnerCornerTopRight" Width="{Binding SelectionIconSize}" Height="{Binding SelectionIconSize}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="4"
                                                   Fill="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality">
                                            <Rectangle.OpacityMask>
                                                <ImageBrush Source="/Assets/skull.png" Stretch="Uniform"/>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                        <Rectangle Name="InnerCornerBottomRight" Width="{Binding SelectionIconSize}" Height="{Binding SelectionIconSize}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="4"
                                                   Fill="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality">
                                            <Rectangle.OpacityMask>
                                                <ImageBrush Source="/Assets/skull.png" Stretch="Uniform"/>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Grid>
                                </Border>
                            </Border>
                        </Grid>
                        
                         <!-- Wing Decorations Layer -->
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                              ClipToBounds="False" IsHitTestVisible="False"
                              IsVisible="{Binding HidePinDecoration, Converter={StaticResource BoolInvertConverter}}">
                                
                                <Rectangle Width="{Binding WingWidth}" Height="{Binding WingHeight}" VerticalAlignment="Center"
                                           HorizontalAlignment="Left" Margin="{Binding LeftWingMargin}"
                                           Fill="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                                           RenderOptions.BitmapInterpolationMode="HighQuality">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush Source="/Assets/wing_left.png" Stretch="Uniform" AlignmentX="Right"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                       
                                <Rectangle Width="{Binding WingWidth}" Height="{Binding WingHeight}" VerticalAlignment="Center"
                                           HorizontalAlignment="Right" Margin="{Binding RightWingMargin}"
                                           Fill="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                                           RenderOptions.BitmapInterpolationMode="HighQuality">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush Source="/Assets/wing_right.png" Stretch="Uniform" AlignmentX="Left"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Border>

         <!-- Row 2: Bottom Toolbar (Unified Image+Video Drawing Tools) -->
        <Border Grid.Row="2" IsVisible="{Binding ShowToolbar}" 
                Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" 
                CornerRadius="8" Padding="4" Margin="0,6,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                BoxShadow="0 4 15 0 #D0000000">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <!-- Undo / Redo -->
                <Button Theme="{StaticResource SnipButton}" Command="{Binding UndoCommand}" ToolTip.Tip="Undo (Ctrl+Z)" IsEnabled="{Binding CanUndo}">
                    <PathIcon Data="M12.5,8C9.85,8 7.45,9 5.6,10.6L2,7V16H11L7.38,12.38C8.77,11.22 10.54,10.5 12.5,10.5C16.04,10.5 19.05,12.81 20.1,16L22.47,15.22C21.08,11.03 17.13,8 12.5,8Z" Width="14" Height="14"/>
                </Button>
                <Button Theme="{StaticResource SnipButton}" Command="{Binding RedoCommand}" ToolTip.Tip="Redo (Ctrl+Y)" IsEnabled="{Binding CanRedo}">
                    <PathIcon Data="M18.4,10.6C16.55,9 14.15,8 11.5,8C6.87,8 2.92,11.03 1.53,15.22L3.9,16C4.95,12.81 7.96,10.5 11.5,10.5C13.46,10.5 15.23,11.22 16.62,12.38L13,16H22V7L18.4,10.6Z" Width="14" Height="14"/>
                </Button>
                
                <Rectangle Fill="#444444" Width="1" Height="20" Margin="4,0" VerticalAlignment="Center"/>

                <!-- Shapes & Lines -->
                <Button Theme="{StaticResource SnipToolButton}" Classes.active="{Binding IsShapeToolActive}"
                        ToolTip.Tip="{Binding [TipShapes], Source={x:Static services:LocalizationService.Instance}}">
                    <Button.Flyout>
                        <Flyout Placement="Top">
                            <Border Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" Padding="2" CornerRadius="4">
                                <StackPanel Orientation="Horizontal" Spacing="2">
                                    <Button Theme="{StaticResource SnipToolButton}"
                                            Classes.active="{Binding CurrentAnnotationTool, ConverterParameter={x:Static models:AnnotationType.Rectangle}, Converter={StaticResource EnumToBoolConverter}}"
                                            Command="{Binding SelectToolCommand}" CommandParameter="{x:Static models:AnnotationType.Rectangle}"
                                            ToolTip.Tip="{Binding [TipRectangle], Source={x:Static services:LocalizationService.Instance}}">
                                        <PathIcon Data="M19,3H5C3.89,3,3,3.89,3,5v14c0,1.1,0.89,2,2,2h14c1.1,0,2-0.89,2-2V5C21,3.89,20.1,3,19,3z M19,19H5V5h14V19z" Width="14" Height="14"/>
                                    </Button>
                                    <Button Theme="{StaticResource SnipToolButton}"
                                            Classes.active="{Binding CurrentAnnotationTool, ConverterParameter={x:Static models:AnnotationType.Ellipse}, Converter={StaticResource EnumToBoolConverter}}"
                                            Command="{Binding SelectToolCommand}" CommandParameter="{x:Static models:AnnotationType.Ellipse}"
                                            ToolTip.Tip="{Binding [TipEllipse], Source={x:Static services:LocalizationService.Instance}}">
                                        <PathIcon Data="M12,2C6.48,2,2,6.48,2,12s4.48,10,10,10s10-4.48,10-10S17.52,2,12,2z M12,20c-4.41,0-8-3.59-8-8s3.59-8,8-8s8,3.59,8,8 S16.41,20,12,20z" Width="14" Height="14"/>
                                    </Button>
                                    <Button Theme="{StaticResource SnipToolButton}"
                                            Classes.active="{Binding CurrentAnnotationTool, ConverterParameter={x:Static models:AnnotationType.Arrow}, Converter={StaticResource EnumToBoolConverter}}"
                                            Command="{Binding SelectToolCommand}" CommandParameter="{x:Static models:AnnotationType.Arrow}"
                                            ToolTip.Tip="{Binding [TipArrow], Source={x:Static services:LocalizationService.Instance}}">
                                        <PathIcon Data="M9,5v2h6.59L4,18.59L5.41,20L17,8.41V15h2V5H9z" Width="14" Height="14"/>
                                    </Button>
                                    <Button Theme="{StaticResource SnipToolButton}"
                                            Classes.active="{Binding CurrentAnnotationTool, ConverterParameter={x:Static models:AnnotationType.Line}, Converter={StaticResource EnumToBoolConverter}}"
                                            Command="{Binding SelectToolCommand}" CommandParameter="{x:Static models:AnnotationType.Line}"
                                            ToolTip.Tip="{Binding [TipLine], Source={x:Static services:LocalizationService.Instance}}">
                                            <PathIcon Data="M3,11h18v2H3V11z" Width="14" Height="14"/>
                                        </Button>
                                </StackPanel>
                            </Border>
                        </Flyout>
                    </Button.Flyout>
                    <Panel>
                        <TextBlock Text="□" IsVisible="{Binding CurrentAnnotationTool, Converter={StaticResource EnumMatchConverter}, ConverterParameter={x:Static models:AnnotationType.Rectangle}}" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="○" IsVisible="{Binding CurrentAnnotationTool, Converter={StaticResource EnumMatchConverter}, ConverterParameter={x:Static models:AnnotationType.Ellipse}}" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="↗" IsVisible="{Binding CurrentAnnotationTool, Converter={StaticResource EnumMatchConverter}, ConverterParameter={x:Static models:AnnotationType.Arrow}}" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="—" IsVisible="{Binding CurrentAnnotationTool, Converter={StaticResource EnumMatchConverter}, ConverterParameter={x:Static models:AnnotationType.Line}}" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="⬚" IsVisible="{Binding IsShapeToolActive, Converter={StaticResource BoolInvertConverter}}" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Panel>
                </Button>

                <!-- Pen Tool (Separate) -->
                <RadioButton Theme="{StaticResource SnipToggleButton}" IsChecked="{Binding CurrentAnnotationTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static models:AnnotationType.Pen}}" ToolTip.Tip="{Binding [TipPen], Source={x:Static services:LocalizationService.Instance}}">
                    <PathIcon Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" Width="14" Height="14"/>
                </RadioButton>

                <!-- Text Tool -->
                <RadioButton Theme="{StaticResource SnipToggleButton}" IsChecked="{Binding CurrentAnnotationTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static models:AnnotationType.Text}}" ToolTip.Tip="{Binding [TipText], Source={x:Static services:LocalizationService.Instance}}">
                    <PathIcon Data="M5,3H19A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3M11,7V13H9V15H15V13H13V7H15V5H9V7H11Z" Width="14" Height="14"/>
                </RadioButton>

                <Rectangle Fill="#444444" Width="1" Height="20" Margin="4,0" VerticalAlignment="Center"/>

                <!-- Settings Controls -->
                <!-- Style Button -->
                <Button Theme="{StaticResource SnipButton}" FontSize="12" BorderThickness="1" ToolTip.Tip="Color">
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <Border Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" Padding="6" CornerRadius="4">
                                <StackPanel Spacing="6">
                                    <ItemsControl ItemsSource="{x:Static mainVm:SnipWindowViewModel+StaticData.ColorsList}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Width="88"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="media:Color">
                                                <Button Width="16" Height="16" Margin="1" Padding="0" CornerRadius="8"
                                                        Background="{Binding Converter={StaticResource ColorToBrushConverter}}"
                                                        Command="{Binding $parent[Window].DataContext.ChangeColorCommand}"
                                                        CommandParameter="{Binding}">
                                                    <Border BorderBrush="White" BorderThickness="1" CornerRadius="8" IsHitTestVisible="False"
                                                            IsVisible="{Binding $parent[Window].DataContext.SelectedColor, Converter={StaticResource ColorMatchConverter}, ConverterParameter={Binding}}"/>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <ColorSpectrum Color="{Binding SelectedColor, Mode=TwoWay}" MinWidth="80" MinHeight="80" MaxWidth="80" MaxHeight="80" Shape="Box"/>
                                </StackPanel>
                            </Border>
                        </Flyout>
                    </Button.Flyout>
                    <Ellipse Width="10" Height="10" Fill="{Binding SelectedColor, Converter={StaticResource ColorToBrushConverter}}"/>
                </Button>
                
                <ComboBox ItemsSource="{Binding Thicknesses}" SelectedItem="{Binding CurrentThickness}" Width="60" IsEnabled="{Binding !IsEnteringText}" ToolTip.Tip="Thickness">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20">
                                <Rectangle Fill="White" Height="{Binding}" Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" RadiusX="1" RadiusY="1"/>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Rectangle Fill="#444444" Width="1" Height="20" Margin="4,0" VerticalAlignment="Center"/>

                <!-- System Actions -->
                <Button Theme="{StaticResource SnipButton}" Command="{Binding CopyCommand}" ToolTip.Tip="{Binding [MenuCopyVideo], Source={x:Static services:LocalizationService.Instance}}">
                    <PathIcon Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" Width="14" Height="14"/>
                </Button>
                
                <Button Theme="{StaticResource SnipButton}" Command="{Binding SaveCommand}" ToolTip.Tip="{Binding [MenuSaveVideo], Source={x:Static services:LocalizationService.Instance}}">
                    <PathIcon Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" Width="14" Height="14"/>
                </Button>

                <Button Theme="{StaticResource SnipButton}" Command="{Binding CloseCommand}" ToolTip.Tip="{Binding [MenuClose], Source={x:Static services:LocalizationService.Instance}}">
                    <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" Width="14" Height="14"/>
                </Button>
            </StackPanel>
        </Border>

         <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="{Binding [MenuCopyVideo], Source={x:Static services:LocalizationService.Instance}}" Command="{Binding CopyCommand}"/>
                <MenuItem Header="{Binding [MenuSaveVideo], Source={x:Static services:LocalizationService.Instance}}" Command="{Binding SaveCommand}"/>
                <Separator/>
                <MenuItem Header="{Binding [MenuShowToolbar], Source={x:Static services:LocalizationService.Instance}}" 
                          Command="{Binding ToggleToolbarCommand}">
                    <MenuItem.Icon>
                        <CheckBox IsChecked="{Binding ShowToolbar}" IsHitTestVisible="False"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{Binding [MenuClose], Source={x:Static services:LocalizationService.Instance}}" Command="{Binding CloseCommand}"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
