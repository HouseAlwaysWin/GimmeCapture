<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GimmeCapture.Views.Floating.FloatingDrawCanvas"
        Title="DrawCanvas"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True">
    
    <!-- Nearly transparent canvas for drawing -->
    <!-- Background #02000000 = 2/255 (~1%) opacity black, required for hit-testing -->
    <Canvas Name="DrawingSurface" Background="#02000000">
        <!-- Annotation shapes will be rendered here programmatically -->
    </Canvas>
</Window>
