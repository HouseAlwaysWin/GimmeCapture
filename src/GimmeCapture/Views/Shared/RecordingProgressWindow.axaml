<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GimmeCapture.ViewModels.Main"
        xmlns:services="using:GimmeCapture.Services.Core.Infrastructure"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="100"
        x:Class="GimmeCapture.Views.Shared.RecordingProgressWindow"
        x:DataType="vm:SnipWindowViewModel"
        Title="Processing Recording..."
        Width="350" Height="100"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" PointerPressed="OnPointerPressed">
        <!-- Octagonal Progress Bar -->
        <Grid ColumnDefinitions="Auto,224,Auto" HorizontalAlignment="Center">
            <!-- Left Wing Decoration -->
            <Rectangle Grid.Column="0" Width="44" Height="26" VerticalAlignment="Center" 
                       Fill="{Binding ThemeColor, Converter={StaticResource ColorToBrushConverter}}" 
                       Opacity="0.8">
                <Rectangle.OpacityMask>
                    <ImageBrush Source="avares://GimmeCapture/Assets/wing_left.png" Stretch="Fill"/>
                </Rectangle.OpacityMask>
            </Rectangle>

            <Panel Grid.Column="1" Width="224" Height="48">
                <!-- Octagonal Shadow/Glow -->
                <Path Data="M 12,0 L 212,0 L 224,12 L 224,36 L 212,48 L 12,48 L 0,36 L 0,12 Z" 
                      Fill="{Binding ThemeColor, Converter={StaticResource ColorToBrushConverter}}" 
                      Opacity="0.3"
                      Stretch="Fill"
                      Margin="-3">
                    <Path.Effect>
                        <BlurEffect Radius="12"/>
                    </Path.Effect>
                </Path>

                <Grid ColumnDefinitions="12,*,12">
                    <!-- Left Cap -->
                    <Panel Grid.Column="0">
                        <Path Data="M 1,0 L 0,0.25 L 0,0.75 L 1,1" Stretch="Fill" Fill="#1A1A1A"/>
                        <Path Data="M 1,0 L 0,0.25 L 0,0.75 L 1,1" Stretch="Fill" StrokeThickness="1">
                            <Path.Stroke>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="{Binding ThemeDeepColor}"/>
                                    <GradientStop Offset="0.5" Color="{Binding ThemeColor}"/>
                                    <GradientStop Offset="1" Color="{Binding ThemeDeepColor}"/>
                                </LinearGradientBrush>
                            </Path.Stroke>
                        </Path>
                    </Panel>
                    
                    <!-- Center -->
                    <Panel Grid.Column="1">
                        <Rectangle Fill="#1A1A1A"/>
                        <Rectangle Height="1" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="{Binding ThemeDeepColor}"/>
                                    <GradientStop Offset="0.5" Color="{Binding ThemeColor}"/>
                                    <GradientStop Offset="1" Color="{Binding ThemeDeepColor}"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Height="1" VerticalAlignment="Bottom">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="{Binding ThemeDeepColor}"/>
                                    <GradientStop Offset="0.5" Color="{Binding ThemeColor}"/>
                                    <GradientStop Offset="1" Color="{Binding ThemeDeepColor}"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        
                        <StackPanel Spacing="6" VerticalAlignment="Center" Margin="0,0,0,2">
                            <TextBlock Text="{Binding ProcessingText}" 
                                       Foreground="White" 
                                       FontSize="10" 
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       LetterSpacing="1.2"/>
                            <ProgressBar Minimum="0" Maximum="100"
                                         Height="3"
                                         Value="{Binding ProgressValue}"
                                         IsIndeterminate="{Binding IsIndeterminate}"
                                         Foreground="{Binding ThemeColor, Converter={StaticResource ColorToBrushConverter}}"
                                         Background="#333333">
                                <ProgressBar.Styles>
                                    <Style Selector="ProgressBar /template/ Border#ProgressBarRoot">
                                        <Setter Property="ClipToBounds" Value="False"/>
                                    </Style>
                                </ProgressBar.Styles>
                            </ProgressBar>
                        </StackPanel>
                    </Panel>

                    <!-- Right Cap -->
                    <Panel Grid.Column="2">
                        <Path Data="M 0,0 L 1,0.25 L 1,0.75 L 0,1" Stretch="Fill" Fill="#1A1A1A"/>
                        <Path Data="M 0,0 L 1,0.25 L 1,0.75 L 0,1" Stretch="Fill" StrokeThickness="1">
                            <Path.Stroke>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="{Binding ThemeDeepColor}"/>
                                    <GradientStop Offset="0.5" Color="{Binding ThemeColor}"/>
                                    <GradientStop Offset="1" Color="{Binding ThemeDeepColor}"/>
                                </LinearGradientBrush>
                            </Path.Stroke>
                        </Path>
                    </Panel>
                </Grid>
            </Panel>

            <!-- Right Wing Decoration -->
            <Rectangle Grid.Column="2" Width="44" Height="26" VerticalAlignment="Center" 
                       Fill="{Binding ThemeColor, Converter={StaticResource ColorToBrushConverter}}" 
                       Opacity="0.8">
                <Rectangle.OpacityMask>
                    <ImageBrush Source="avares://GimmeCapture/Assets/wing_right.png" Stretch="Fill"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Grid>
    </Grid>
</Window>


