<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <!-- Theme Color Palette -->
            <Color x:Key="AccentRed">#E60012</Color>
            <Color x:Key="DeepRed">#900000</Color>
            <Color x:Key="GothicBlack">#121212</Color>
            <Color x:Key="ChromeSilver">#E0E0E0</Color>
            <Color x:Key="MetallicSilver">#A0A0A0</Color>
            <Color x:Key="AccentGold">#D4AF37</Color>
            <Color x:Key="PanelGray">#1E1E1E</Color>

            <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
            <SolidColorBrush x:Key="AccentGoldBrush" Color="{StaticResource AccentGold}"/>
            <SolidColorBrush x:Key="DeepRedBrush" Color="{StaticResource DeepRed}"/>
            <SolidColorBrush x:Key="GothicBlackBrush" Color="{StaticResource GothicBlack}"/>
            <SolidColorBrush x:Key="ChromeSilverBrush" Color="{StaticResource ChromeSilver}"/>
            <SolidColorBrush x:Key="MetallicSilverBrush" Color="{StaticResource MetallicSilver}"/>
            <SolidColorBrush x:Key="PanelGrayBrush" Color="{StaticResource PanelGray}"/>

            <!-- Official Style Gothic Metal Button (Octagonal/Clipped Corners) -->

            <ControlTheme x:Key="GothicMetalButton" TargetType="Button">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="{StaticResource ChromeSilverBrush}"/>
                <Setter Property="Padding" Value="15,6"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Times New Roman, Georgia, Serif"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="TextBlock.LetterSpacing" Value="1.5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Transitions">
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                    </Transitions>
                </Setter>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Grid ColumnDefinitions="8,*,8" Name="RootGrid">
                            <Grid.Styles>
                                <Style Selector="Path.BtnBorder">
                                    <Setter Property="StrokeThickness" Value="1"/>
                                    <Setter Property="Stroke">
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                            <GradientStop Offset="0" Color="{DynamicResource ThemeDeepColor}"/>
                                            <GradientStop Offset="0.5" Color="{DynamicResource ThemeAccentColor}"/>
                                            <GradientStop Offset="1" Color="{DynamicResource ThemeDeepColor}"/>
                                        </LinearGradientBrush>
                                    </Setter>
                                </Style>
                                <Style Selector="Rectangle.BtnBorder">
                                    <Setter Property="Fill">
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                            <GradientStop Offset="0" Color="{DynamicResource ThemeDeepColor}"/>
                                            <GradientStop Offset="0.5" Color="{DynamicResource ThemeAccentColor}"/>
                                            <GradientStop Offset="1" Color="{DynamicResource ThemeDeepColor}"/>
                                        </LinearGradientBrush>
                                    </Setter>
                                </Style>
                            </Grid.Styles>

                            <!-- Left Cap -->
                            <Panel Grid.Column="0">
                                <Path Data="M 1,0 L 0,0.20 L 0,0.80 L 1,1" Stretch="Fill" Fill="{TemplateBinding Background}" Name="BgLeft" Margin="1,0,0,0"/>
                                <Path Data="M 1,0 L 0,0.20 L 0,0.80 L 1,1" Stretch="Fill" Classes="BtnBorder" Name="BorderLeft" Margin="1,0,0,0"/>
                                <Path Data="M 1,0.05 L 0.1,0.23 L 0.1,0.77 L 1,0.95" Stretch="Fill" Stroke="#30FFFFFF" StrokeThickness="0.5" Margin="1,1,0,1"/>
                            </Panel>

                            <!-- Center -->
                            <Panel Grid.Column="1">
                                <Rectangle Fill="{TemplateBinding Background}" Name="BgCenter"/>
                                <Rectangle Height="1" VerticalAlignment="Top" Classes="BtnBorder" Name="BorderTop"/>
                                <Rectangle Height="1" VerticalAlignment="Bottom" Classes="BtnBorder" Name="BorderBottom"/>
                                <Rectangle Height="1" VerticalAlignment="Top" Fill="#30FFFFFF" Margin="0,2,0,0"/>
                                <Rectangle Height="1" VerticalAlignment="Bottom" Fill="#30FFFFFF" Margin="0,0,0,2"/>

                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Panel>

                            <!-- Right Cap -->
                            <Panel Grid.Column="2">
                                <Path Data="M 0,0 L 1,0.20 L 1,0.80 L 0,1" Stretch="Fill" Fill="{TemplateBinding Background}" Name="BgRight" Margin="0,0,1,0"/>
                                <Path Data="M 0,0 L 1,0.20 L 1,0.80 L 0,1" Stretch="Fill" Classes="BtnBorder" Name="BorderRight" Margin="0,0,1,0"/>
                                <Path Data="M 0,0.05 L 0.9,0.23 L 0.9,0.77 L 0,0.95" Stretch="Fill" Stroke="#30FFFFFF" StrokeThickness="0.5" Margin="0,1,1,1"/>
                            </Panel>
                        </Grid>
                    </ControlTemplate>
                </Setter>
                
                <Style Selector="^:pointerover">
                    <Setter Property="RenderTransform" Value="scale(1.05)"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style Selector="^ /template/ Path#BgLeft, ^ /template/ Rectangle#BgCenter, ^ /template/ Path#BgRight">
                        <Setter Property="Fill" Value="#080808"/>
                    </Style>
                    <Style Selector="^ /template/ Path#BorderLeft, ^ /template/ Path#BorderRight">
                        <Setter Property="Stroke" Value="White"/>
                    </Style>
                    <Style Selector="^ /template/ Rectangle#BorderTop, ^ /template/ Rectangle#BorderBottom">
                        <Setter Property="Fill" Value="White"/>
                    </Style>
                </Style>
                
                <Style Selector="^:pressed">
                    <Setter Property="RenderTransform" Value="scale(0.98)"/>
                    <Style Selector="^ /template/ Path#BgLeft, ^ /template/ Rectangle#BgCenter, ^ /template/ Path#BgRight">
                        <Setter Property="Fill" Value="#1A1A1A"/>
                    </Style>
                </Style>
            </ControlTheme>

            <!-- Small Gothic Metal Button -->
            <ControlTheme x:Key="SmallGothicMetalButton" TargetType="Button">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="{StaticResource ChromeSilverBrush}"/>
                <Setter Property="Padding" Value="8,2"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontFamily" Value="avares://GimmeCapture/Assets/Fonts/Cinzel/Cinzel-VariableFont_wght.ttf#Cinzel, avares://GimmeCapture/Assets/Fonts/Noto_Serif_JP/NotoSerifJP-VariableFont_wght.ttf#Noto Serif JP, avares://GimmeCapture/Assets/Fonts/Noto_Serif_TC/NotoSerifTC-VariableFont_wght.ttf#Noto Serif TC"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="TextBlock.LetterSpacing" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Transitions">
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                    </Transitions>
                </Setter>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Grid ColumnDefinitions="6,*,6" Name="RootGrid">
                            <Grid.Styles>
                                <Style Selector="Path.BtnBorder">
                                    <Setter Property="StrokeThickness" Value="1"/>
                                    <Setter Property="Stroke">
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                            <GradientStop Offset="0" Color="{DynamicResource ThemeDeepColor}"/>
                                            <GradientStop Offset="0.5" Color="{DynamicResource ThemeAccentColor}"/>
                                            <GradientStop Offset="1" Color="{DynamicResource ThemeDeepColor}"/>
                                        </LinearGradientBrush>
                                    </Setter>
                                </Style>
                                <Style Selector="Rectangle.BtnBorder">
                                    <Setter Property="Fill">
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                            <GradientStop Offset="0" Color="{DynamicResource ThemeDeepColor}"/>
                                            <GradientStop Offset="0.5" Color="{DynamicResource ThemeAccentColor}"/>
                                            <GradientStop Offset="1" Color="{DynamicResource ThemeDeepColor}"/>
                                        </LinearGradientBrush>
                                    </Setter>
                                </Style>
                            </Grid.Styles>

                            <!-- Left Cap -->
                            <Panel Grid.Column="0">
                                <Path Data="M 1,0 L 0,0.25 L 0,0.75 L 1,1" Stretch="Fill" Fill="{TemplateBinding Background}" Name="BgLeft" Margin="1,0,0,0"/>
                                <Path Data="M 1,0 L 0,0.25 L 0,0.75 L 1,1" Stretch="Fill" Classes="BtnBorder" Name="BorderLeft" Margin="1,0,0,0"/>
                                <Path Data="M 1,0.05 L 0.1,0.28 L 0.1,0.72 L 1,0.95" Stretch="Fill" Stroke="#30FFFFFF" StrokeThickness="0.5" Margin="1,1,0,1"/>
                            </Panel>

                            <!-- Center -->
                            <Panel Grid.Column="1">
                                <Rectangle Fill="{TemplateBinding Background}" Name="BgCenter"/>
                                <Rectangle Height="1" VerticalAlignment="Top" Classes="BtnBorder" Name="BorderTop"/>
                                <Rectangle Height="1" VerticalAlignment="Bottom" Classes="BtnBorder" Name="BorderBottom"/>
                                
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Panel>

                            <!-- Right Cap -->
                            <Panel Grid.Column="2">
                                <Path Data="M 0,0 L 1,0.25 L 1,0.75 L 0,1" Stretch="Fill" Fill="{TemplateBinding Background}" Name="BgRight" Margin="0,0,1,0"/>
                                <Path Data="M 0,0 L 1,0.25 L 1,0.75 L 0,1" Stretch="Fill" Classes="BtnBorder" Name="BorderRight" Margin="0,0,1,0"/>
                                <Path Data="M 0,0.05 L 0.9,0.28 L 0.9,0.72 L 0,0.95" Stretch="Fill" Stroke="#30FFFFFF" StrokeThickness="0.5" Margin="0,1,1,1"/>
                            </Panel>
                        </Grid>
                    </ControlTemplate>
                </Setter>
                
                <Style Selector="^:pointerover">
                    <Setter Property="RenderTransform" Value="scale(1.05)"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style Selector="^ /template/ Path#BgLeft, ^ /template/ Rectangle#BgCenter, ^ /template/ Path#BgRight">
                        <Setter Property="Fill" Value="#080808"/>
                    </Style>
                    <Style Selector="^ /template/ Path#BorderLeft, ^ /template/ Path#BorderRight">
                        <Setter Property="Stroke" Value="White"/>
                    </Style>
                    <Style Selector="^ /template/ Rectangle#BorderTop, ^ /template/ Rectangle#BorderBottom">
                        <Setter Property="Fill" Value="White"/>
                    </Style>
                </Style>
                
                <Style Selector="^:pressed">
                    <Setter Property="RenderTransform" Value="scale(0.98)"/>
                    <Style Selector="^ /template/ Path#BgLeft, ^ /template/ Rectangle#BgCenter, ^ /template/ Path#BgRight">
                        <Setter Property="Fill" Value="#1A1A1A"/>
                    </Style>
                </Style>
            </ControlTheme>

            <!-- Metal Button Style -->
            <ControlTheme x:Key="MetalButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource GothicBlackBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="25,10"/>
                <Setter Property="CornerRadius" Value="0"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Transitions">
                    <Transitions>
                        <BrushTransition Property="Background" Duration="0:0:0.2"/>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                    </Transitions>
                </Setter>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Name="OuterBorder" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                BoxShadow="0 0 5 0 #40E60012">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Offset="0" Color="{DynamicResource ThemeDeepColor}"/>
                                    <GradientStop Offset="0.5" Color="{DynamicResource ThemeAccentColor}"/>
                                    <GradientStop Offset="1" Color="{DynamicResource ThemeDeepColor}"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Panel>
                                <!-- Accent Corners (Using Panel so they don't affect ContentPresenter layout) -->
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="8" Height="1.5" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-20,-5,0,0"/>
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="1.5" Height="8" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-20,-5,0,0"/>
                                
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="8" Height="1.5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,-20,-5"/>
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="1.5" Height="8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,-20,-5"/>

                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Panel>
                        </Border>
                    </ControlTemplate>
                </Setter>
                
                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#1A1A1A"/>
                    <Setter Property="RenderTransform" Value="scale(1.05)"/>
                    <Style Selector="^ /template/ Border#OuterBorder">
                        <Setter Property="BoxShadow" Value="0 0 12 2 #80E60012"/>
                    </Style>
                </Style>
                
                <Style Selector="^:pressed">
                    <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="RenderTransform" Value="scale(0.95)"/>
                </Style>
            </ControlTheme>

            <!-- Small Metal Button Variant for Settings -->
            <ControlTheme x:Key="SmallMetalButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource GothicBlackBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,4"/>
                <Setter Property="CornerRadius" Value="0"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Transitions">
                    <Transitions>
                        <BrushTransition Property="Background" Duration="0:0:0.2"/>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                    </Transitions>
                </Setter>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Name="OuterBorder" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                BoxShadow="0 0 3 0 #40E60012">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Offset="0" Color="{DynamicResource ThemeDeepColor}"/>
                                    <GradientStop Offset="0.5" Color="{DynamicResource ThemeAccentColor}"/>
                                    <GradientStop Offset="1" Color="{DynamicResource ThemeDeepColor}"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Panel>
                                <!-- Accent Corners (Smaller) -->
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="5" Height="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-5,-2,0,0"/>
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="1" Height="5" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-5,-2,0,0"/>
                                
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="5" Height="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,-5,-2"/>
                                <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="1" Height="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,-5,-2"/>
                                
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Panel>
                        </Border>
                    </ControlTemplate>
                </Setter>
                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#1A1A1A"/>
                    <Style Selector="^ /template/ Border#OuterBorder">
                        <Setter Property="BoxShadow" Value="0 0 8 1 #60E60012"/>
                    </Style>
                </Style>
                <Style Selector="^:pressed">
                    <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                    <Setter Property="RenderTransform" Value="scale(0.95)"/>
                </Style>
            </ControlTheme>

            <!-- SnipToolbar Button Style -->
            <ControlTheme x:Key="SnipButton" TargetType="Button">
                <Setter Property="Background" Value="#2A2A2A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="MinWidth" Value="28"/>
                <Setter Property="MinHeight" Value="28"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#444444"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Panel>
                            <Border Name="PART_Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalContentAlignment="Center"
                                                  VerticalContentAlignment="Center"/>
                            </Border>
                        </Panel>
                    </ControlTemplate>
                </Setter>

                <Style Selector="^:pointerover /template/ Border#PART_Border">
                    <Setter Property="Background" Value="#3A3A3A"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                </Style>
                <Style Selector="^:pressed">
                    <Setter Property="RenderTransform" Value="scale(0.95)"/>
                </Style>
            </ControlTheme>

            <!-- SnipToolbar Button with Active State Support -->
            <ControlTheme x:Key="SnipToolButton" TargetType="Button">
                <Setter Property="Background" Value="#2A2A2A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="MinWidth" Value="28"/>
                <Setter Property="MinHeight" Value="28"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#444444"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Panel>
                            <Border Name="PART_Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalContentAlignment="Center"
                                                  VerticalContentAlignment="Center"/>
                            </Border>
                        </Panel>
                    </ControlTemplate>
                </Setter>

                <Style Selector="^:pointerover /template/ Border#PART_Border">
                    <Setter Property="Background" Value="#3A3A3A"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                </Style>
                <Style Selector="^:pressed">
                    <Setter Property="RenderTransform" Value="scale(0.95)"/>
                </Style>
                <Style Selector="^.active /template/ Border#PART_Border">
                    <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                    <Setter Property="BoxShadow" Value="0 0 8 0 #80E60012"/>
                </Style>
            </ControlTheme>

            <ControlTheme x:Key="SnipToggleButton" TargetType="ToggleButton">
                <Setter Property="Background" Value="#2A2A2A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="MinWidth" Value="28"/>
                <Setter Property="MinHeight" Value="28"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#444444"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Panel>
                            <Border Name="PART_Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalContentAlignment="Center"
                                                  VerticalContentAlignment="Center"/>
                            </Border>
                        </Panel>
                    </ControlTemplate>
                </Setter>

                <Style Selector="^:pointerover /template/ Border#PART_Border">
                    <Setter Property="Background" Value="#3A3A3A"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                </Style>
                <Style Selector="^:checked /template/ Border#PART_Border">
                    <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                    <Setter Property="BoxShadow" Value="0 0 8 0 #80E60012"/> <!-- Will address shadow color later if needed -->
                </Style>
                <Style Selector="^:pressed">
                    <Setter Property="RenderTransform" Value="scale(0.95)"/>
                </Style>
            </ControlTheme>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- TabControl & TabItem Style -->
    <Style Selector="TabControl">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TabItem:pointerover">
        <Setter Property="Foreground" Value="{StaticResource ChromeSilverBrush}"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="{DynamicResource ThemeAccentBrush}"/>
        <Style Selector="^ /template/ Border#PART_SelectedPipe">
            <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
            <Setter Property="Height" Value="3"/>
            <Setter Property="CornerRadius" Value="1.5"/>
            <Setter Property="BoxShadow" Value="0 0 8 1 #80E60012"/>
        </Style>
    </Style>

    <!-- CheckBox Babymetal Style -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="8,0,0,0"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,*">
                    <Border Name="NormalRectangle" Grid.Column="0"
                            Width="18" Height="18"
                            BorderBrush="#444444" 
                            BorderThickness="1"
                            Background="#1A1A1A"
                            CornerRadius="0">
                        <Panel>
                            <Path Name="CheckMark" 
                                  Data="M 0 5 L 4 9 L 10 0" 
                                  Stroke="{DynamicResource ThemeAccentBrush}" 
                                  StrokeThickness="2"
                                  IsVisible="False"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Margin="0,2,0,0"/>
                        </Panel>
                    </Border>
                    <ContentPresenter Grid.Column="1" 
                                      Content="{TemplateBinding Content}"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"/>
                </Grid>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:pointerover /template/ Border#NormalRectangle">
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
            <Setter Property="BoxShadow" Value="0 0 5 0 #40E60012"/>
        </Style>
        <Style Selector="^:checked /template/ Path#CheckMark">
            <Setter Property="IsVisible" Value="True"/>
        </Style>
        <Style Selector="^:checked /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
        </Style>
    </Style>

    <!-- ComboBox Babymetal Style -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#333333"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Border Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <Grid ColumnDefinitions="*,Auto">
                            <ContentPresenter Name="PART_ContentPresenter"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Path Grid.Column="1" 
                                  Data="M 0 0 L 4 4 L 8 0" 
                                  Stroke="White" 
                                  StrokeThickness="1" 
                                  VerticalAlignment="Center" 
                                  Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                    <!-- Technical Corner Markers (Simulation) -->
                    <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="6" Height="1" VerticalAlignment="Top" HorizontalAlignment="Left" IsVisible="{Binding $parent[ComboBox].IsPointerOver}"/>
                    <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="1" Height="6" VerticalAlignment="Top" HorizontalAlignment="Left" IsVisible="{Binding $parent[ComboBox].IsPointerOver}"/>
                    <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="6" Height="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsVisible="{Binding $parent[ComboBox].IsPointerOver}"/>
                    <Rectangle Fill="{DynamicResource ThemeAccentBrush}" Width="1" Height="6" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsVisible="{Binding $parent[ComboBox].IsPointerOver}"/>
                    
                    <Popup Name="PART_Popup"
                           IsOpen="{TemplateBinding IsDropDownOpen, Mode=TwoWay}"
                           MinWidth="{Binding $parent[ComboBox].Bounds.Width}"
                           PlacementTarget="{Binding $parent[ComboBox]}">
                        <Border Background="#121212" BorderBrush="{DynamicResource ThemeAccentBrush}" BorderThickness="1">
                            <ScrollViewer>
                                <ItemsPresenter Name="PART_ItemsPresenter"
                                                ItemsPanel="{TemplateBinding ItemsPanel}"/>
                            </ScrollViewer>
                        </Border>
                    </Popup>
                </Grid>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:pointerover /template/ Border#PART_Border">
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
            <Setter Property="BoxShadow" Value="0 0 8 0 #40E60012"/>
        </Style>
        <Style Selector="^:dropdownopen /template/ Border#PART_Border">
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
        </Style>
    </Style>

    <!-- TextBox Babymetal Style -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="#1A1A1A"/>
        <Setter Property="BorderBrush" Value="#333333"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="CaretBrush" Value="{StaticResource AccentGoldBrush}"/>
        <Style Selector="^:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BoxShadow" Value="0 0 8 0 #40E60012"/>
        </Style>
        <Style Selector="^:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
    </Style>
    <!-- Custom Slider Style (Robust Override & No Clipping) -->
    <Style Selector="Slider">
        <Setter Property="Height" Value="32"/>
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Resources>
            <SolidColorBrush x:Key="SliderThumbBackground" Color="{DynamicResource ThemeAccentColor}"/>
            <SolidColorBrush x:Key="SliderThumbBackgroundPointerOver" Color="{DynamicResource ThemeAccentColor}"/>
            <SolidColorBrush x:Key="SliderThumbBackgroundPressed" Color="{DynamicResource ThemeDeepColor}"/>
            <SolidColorBrush x:Key="SliderTrackValueFill" Color="{DynamicResource ThemeAccentColor}"/>
            <SolidColorBrush x:Key="SliderTrackValueFillPointerOver" Color="{DynamicResource ThemeAccentColor}"/>
            <SolidColorBrush x:Key="SliderTrackValueFillPressed" Color="{DynamicResource ThemeDeepColor}"/>
        </Style.Resources>
        
        <Style Selector="^ /template/ Thumb">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="ClipToBounds" Value="False"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Background="Transparent" ClipToBounds="False">
                        <Ellipse Fill="{DynamicResource ThemeAccentBrush}"
                                 Stroke="{StaticResource GothicBlackBrush}"
                                 StrokeThickness="1"
                                 Width="12" Height="12"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^ /template/ Border#TrackBackground">
            <Setter Property="Height" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="CornerRadius" Value="1"/>
        </Style>
        
        <Style Selector="^ /template/ Track#PART_Track">
            <Setter Property="ClipToBounds" Value="False"/>
        </Style>
    </Style>
</Styles>
